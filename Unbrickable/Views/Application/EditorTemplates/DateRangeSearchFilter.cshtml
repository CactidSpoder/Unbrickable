@model Unbrickable.ViewModels.DateRangeSearchFilter

<div>
    @Html.Hidden("Index", Model.num, new { Name = "search.Index" })
    @Html.Hidden("ModelType", Model.GetType(), new { Name = "search[" + Model.num + "].ModelType" })
    @Html.CheckBoxFor(model => model.isOr, new { Name = "search[" + Model.num + "].isOr", @class = "detailToggle", @id = "toggle" + Model.num, @checked = "checked" })
    <li class='include-search'>
        <div class='entry-icons search-icons'>
            <div class='general-logo'>
                <label class='icon-add icon-add-filter' for="@String.Format("toggle{0}", Model.num)"></label><label class='icon-delete'></label>
            </div>
        </div>
        <h3>Filter by Date Range</h3>
        <div class='search-container'>
            <label class='search-label'>From</label>
            @Html.EditorFor(model => model.min_date, new { htmlAttributes = new { Name = "search[" + Model.num + "].min_date", @class = "text-area search-field date-range" } })
            <label class='search-label'> to </label>
            @Html.EditorFor(model => model.max_date, new { htmlAttributes = new { Name = "search[" + Model.num + "].max_date", @class = "text-area search-field date-range" } })
        </div>
    </li>
</div>

